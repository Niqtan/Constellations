{
    "manifest_version": 3,
    "name": "Constellations",
    "version": "1.0.0",
    "description": "Magic follows everywhere!",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["assets/content.js"]
        }
    ]
}