{
    "manifest_version": 3,
    "name": "Constellations",
    "version": "1.0.0",
    "description": "Magic follows everywhere!",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "dist/assets/background-l0sNRNKZ.js" 
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/assets/content-D2bAl_pc.js"]
        }
    ]
}